{
    "filters": {
        "comments": true
    },
    "plugins": {
        "@textlint/markdown": {
            "extensions": [
                ".mdx"
            ]
        }
    },
    "rules": {
        "terminology": true,
        "no-exclusive-tests": {
            "severity": "error"
        },
        "no-test-skipped": {
            "severity": "warning"
        }
    }
}